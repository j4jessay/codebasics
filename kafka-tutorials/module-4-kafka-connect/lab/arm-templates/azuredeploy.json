{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "ARM template to deploy Azure resources for Kafka-to-Azure ETL pipeline",
    "author": "Codebasics Kafka Tutorials",
    "dateCreated": "2025-11-17"
  },
  "parameters": {
    "projectName": {
      "type": "string",
      "defaultValue": "kafka-etl",
      "maxLength": 11,
      "metadata": {
        "description": "Project name prefix for all resources (max 11 chars, lowercase alphanumeric)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for resource deployment"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "test",
        "prod"
      ],
      "metadata": {
        "description": "Environment type (dev/test/prod)"
      }
    },
    "synapseSqlAdminUsername": {
      "type": "string",
      "defaultValue": "sqladmin",
      "metadata": {
        "description": "Synapse SQL administrator username"
      }
    },
    "synapseSqlAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Synapse SQL administrator password (min 12 chars, must include uppercase, lowercase, number, and special char)"
      }
    },
    "synapseSqlPoolSKU": {
      "type": "string",
      "defaultValue": "DW100c",
      "allowedValues": [
        "DW100c",
        "DW200c",
        "DW300c",
        "DW400c",
        "DW500c"
      ],
      "metadata": {
        "description": "Synapse dedicated SQL pool compute size"
      }
    },
    "enablePublicNetworkAccess": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Allow public network access (set to false for production with private endpoints)"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "Project": "Kafka Tutorials",
        "Module": "Module 4 - ADF Integration",
        "CostCenter": "Training"
      },
      "metadata": {
        "description": "Resource tags for organization and cost tracking"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "storageAccountName": "[concat(parameters('projectName'), 'sa', variables('uniqueSuffix'))]",
    "dataFactoryName": "[concat(parameters('projectName'), '-adf-', parameters('environment'))]",
    "synapseWorkspaceName": "[concat(parameters('projectName'), '-synapse-', parameters('environment'))]",
    "synapseSqlPoolName": "VehicleDataWarehouse",
    "storageContainerNames": [
      "vehicle-telemetry",
      "staging",
      "archive"
    ],
    "dataLakeStorageAccountName": "[concat(parameters('projectName'), 'dl', variables('uniqueSuffix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "allowBlobPublicAccess": false,
        "minimumTlsVersion": "TLS1_2",
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "networkAcls": {
          "defaultAction": "[if(parameters('enablePublicNetworkAccess'), 'Allow', 'Deny')]",
          "bypass": "AzureServices"
        },
        "isHnsEnabled": false
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageAccountName'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "deleteRetentionPolicy": {
          "enabled": true,
          "days": 7
        },
        "containerDeleteRetentionPolicy": {
          "enabled": true,
          "days": 7
        }
      }
    },
    {
      "copy": {
        "name": "containerCopy",
        "count": "[length(variables('storageContainerNames'))]"
      },
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageAccountName'), '/default/', variables('storageContainerNames')[copyIndex()])]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('storageAccountName'), 'default')]"
      ],
      "properties": {
        "publicAccess": "None"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('dataLakeStorageAccountName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "isHnsEnabled": true,
        "minimumTlsVersion": "TLS1_2",
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "networkAcls": {
          "defaultAction": "[if(parameters('enablePublicNetworkAccess'), 'Allow', 'Deny')]",
          "bypass": "AzureServices"
        }
      }
    },
    {
      "type": "Microsoft.DataFactory/factories",
      "apiVersion": "2018-06-01",
      "name": "[variables('dataFactoryName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "publicNetworkAccess": "[if(parameters('enablePublicNetworkAccess'), 'Enabled', 'Disabled')]"
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces",
      "apiVersion": "2021-06-01",
      "name": "[variables('synapseWorkspaceName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('dataLakeStorageAccountName'))]"
      ],
      "properties": {
        "defaultDataLakeStorage": {
          "accountUrl": "[concat('https://', variables('dataLakeStorageAccountName'), '.dfs.core.windows.net')]",
          "filesystem": "synapse"
        },
        "sqlAdministratorLogin": "[parameters('synapseSqlAdminUsername')]",
        "sqlAdministratorLoginPassword": "[parameters('synapseSqlAdminPassword')]",
        "publicNetworkAccess": "[if(parameters('enablePublicNetworkAccess'), 'Enabled', 'Disabled')]",
        "managedVirtualNetwork": "default",
        "managedVirtualNetworkSettings": {
          "preventDataExfiltration": false
        }
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces/firewallRules",
      "apiVersion": "2021-06-01",
      "name": "[concat(variables('synapseWorkspaceName'), '/AllowAllWindowsAzureIps')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      }
    },
    {
      "condition": "[parameters('enablePublicNetworkAccess')]",
      "type": "Microsoft.Synapse/workspaces/firewallRules",
      "apiVersion": "2021-06-01",
      "name": "[concat(variables('synapseWorkspaceName'), '/AllowAll')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName'))]"
      ],
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "255.255.255.255"
      }
    },
    {
      "type": "Microsoft.Synapse/workspaces/sqlPools",
      "apiVersion": "2021-06-01",
      "name": "[concat(variables('synapseWorkspaceName'), '/', variables('synapseSqlPoolName'))]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "[resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName'))]"
      ],
      "sku": {
        "name": "[parameters('synapseSqlPoolSKU')]"
      },
      "properties": {
        "createMode": "Default",
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "storageAccountType": "LRS"
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "storageAccountKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value]"
    },
    "storageAccountConnectionString": {
      "type": "string",
      "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
    },
    "dataFactoryName": {
      "type": "string",
      "value": "[variables('dataFactoryName')]"
    },
    "dataFactoryPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.DataFactory/factories', variables('dataFactoryName')), '2018-06-01', 'Full').identity.principalId]"
    },
    "synapseWorkspaceName": {
      "type": "string",
      "value": "[variables('synapseWorkspaceName')]"
    },
    "synapseSqlPoolName": {
      "type": "string",
      "value": "[variables('synapseSqlPoolName')]"
    },
    "synapseSqlEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName'))).connectivityEndpoints.sql]"
    },
    "synapseWorkspaceUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName'))).connectivityEndpoints.web]"
    },
    "synapsePrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName')), '2021-06-01', 'Full').identity.principalId]"
    },
    "dataLakeStorageAccountName": {
      "type": "string",
      "value": "[variables('dataLakeStorageAccountName')]"
    },
    "nextSteps": {
      "type": "object",
      "value": {
        "step1": "Grant ADF Managed Identity 'Storage Blob Data Contributor' role on storage account",
        "step2": "Grant Synapse Managed Identity 'Storage Blob Data Contributor' role on data lake",
        "step3": "Create linked services in ADF (Blob Storage + Synapse)",
        "step4": "Import ADF pipelines from module-4/lab/adf-pipelines/",
        "step5": "Deploy Synapse SQL scripts from module-6/lab/synapse-scripts/",
        "step6": "Configure Kafka Connect to export to Azure Blob Storage",
        "documentation": "See README.md in arm-templates folder for detailed setup instructions"
      }
    }
  }
}
